<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- MyBatis mapper 설정임을 선언 -->
<mapper namespace="student">

    <select id="findByName" resultType="student">
        select
            *
        from
            student
        where
            name like '%' || #{name} || '%'
    </select>
</mapper>